<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/fragment_step_player"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fragment_step_image"
        app:layout_constraintTop_toTopOf="@+id/fragment_step_player"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_step_player"
        app:layout_constraintRight_toRightOf="@+id/fragment_step_player"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_step_player"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/fragment_step_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_step_player" />
</android.support.constraint.ConstraintLayout>